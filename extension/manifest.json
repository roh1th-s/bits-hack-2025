{
	"manifest_version": 3,

	"name": "fence.ai",
	"icons": {
		"16": "icons/logo_white.png",
		"48": "icons/logo_white.png",
		"128": "icons/logo_white.png"
	},
	"version": "0.1.0",
	"description": "Detect AI generated profiles.",
	"permissions": ["activeTab", "scripting", "storage"],
	"host_permissions": ["*://*.instagram.com/*", "*://*.whatsapp.com/*", "*://*.discord.com/*", "*://*.discordapp.com/*"],
	"background": {
		"service_worker": "js/background.js"
	},
	"action": {
		"default_title": "fence.ai",
		"default_popup": "popup.html"
	},
	"options_ui": {
		"page": "popup.html"
	},
	"content_scripts": [
		{
			"css": ["css/styles.css"],
			"js": ["js/content/common.js"],
			"matches": ["*://*.instagram.com/*", "*://*.whatsapp.com/*", "*://*.discord.com/*"],
			"run_at": "document_end"
		},
		{
			"js": ["js/content/instagram.js", "js/content/stagedpopup.js"],
			"matches": ["*://*.instagram.com/*"],
			"run_at": "document_end"
		},
		{
			"js": ["js/content/whatsapp.js"],
			"matches": ["*://*.whatsapp.com/*"],
			"run_at": "document_end"
		},
		{
			"js": ["js/content/linkedin.js"],
			"matches": ["*://*.linkedin.com/*"],
			"run_at": "document_end"
		}
	]
}
